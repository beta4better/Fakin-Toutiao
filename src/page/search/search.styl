.search
  margin-top 15px;
  .warp
    width 1170px;
    margin 0 auto
    display flex
    .search-left
      width 110px;
      margin-right 20px
      img
        width 100%
    .search-right
      width 700px
      .search-box
        width 100%;
        height 45px;
        display flex
        .search-input
          width: 75%;
          height: 45px;
          border: 1px solid #d0d0d0;
          padding-left: 10px;
          border-right: none;
          box-sizing: border-box;
          border-top-left-radius: 5px;
          border-bottom-left-radius: 5px;
          background: #f5f5f5;
          outline: none;
        .search-button
          width: 25%;
          height: 45px;
          font-size: 18px;
          border: 1px solid #ed4040;
          background: #ed4040;
          outline: none;
          cursor: pointer;
          color: #fff;
          border-top-right-radius: 5px;
          border-bottom-right-radius: 5px;