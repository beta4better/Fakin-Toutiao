.article-bar
  width 100%
  height 60px;
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, .2)
  .middle-bar
    width 1170px
    margin 0 auto
    overflow hidden
    line-height 60px
    position relative
    .logo-box
      float left
      display block
      .logo
        width 110px
        height 27px
        vertical-align middle
    .middle-title
      float left
      margin-left 20px
      font-size 16px
      a
        font-size 16px
    .middle-search
      width 340px
      display block
      line-height 60px
      vertical-align middle
      position absolute
      top 50%
      right 0
      transform translateY(-50%)

.article-warp
  width 1170px
  margin 15px auto
  display flex
  .article-left
    flex 1
    margin-right 20px
    .article-title
      h1
        font-size 34px
        font-weight 700
        line-height 44px
        color #222
    .article-sub
      margin-top 10px
      span
        margin-right 10px
    .article-detail
      font-size 16px
      text-align justify
      margin-top 10px

      .article-img
        display block
        margin 10px auto
        width 100%
      .article-text
        text-indent 2em
        font-size 16px
        line-height 28px
        .bjh-p
          font-size 16px
          line-height 28px
        .bjh-strong
          text-indent 0
          font-weight bold
          font-size 16px
          display block
    .article-comments
      .comments-title
        font-size 18px
        width 100%
        margin 20px 0
        em
          font-size 18px
          font-weight bold
          margin-right 5px
          color #ed4040
      .comments-input
        display flex
        width 100%
        overflow hidden
        .comments-btn
          width 100px;
          border 1px solid #3f404c
          background #3f404c
          color #fff
          cursor pointer
          outline none
        .comments-content
          flex 1
          border 1px solid #3f404c
          outline none
          padding 10px
          max-width 100%
          resize none
          height 50px
          box-sizing border-box

      .comments-list
        .comments-item
          display flex
          padding 20px 0
          box-sizing border-box
          border-bottom 1px solid #f5f5f5
          .user-img
            width 30px
            height 30px
            border-radius 50%
          .user-content
            margin-left 20px
            .user-info
              font-size 14px
            .user-reply
              font-size 15px
              padding 10px 0
            .footer-action
              .reply-count
                font-size 13px
                color #ed4040
                cursor pointer
  .article-right
    width 340px