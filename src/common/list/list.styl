.article-list
  width 100%;
  padding 15px 0
  cursor pointer
  overflow hidden
  border-bottom 1px solid #f5f5f5
  position relative
  a
    display flex
  .article-image
    width 160px
    height 100px
    overflow hidden
    margin-right 15px
    img
      display inline-block
      width 100%
      height auto
      transition all .5s ease-out .1s
      &:hover
        transform scale(1.2, 1.2)
  .article-content
    flex 1
    width 100%
    height 100px
    overflow hidden
    .article-title
      width 100%
      max-height 55px
      -webkit-line-clamp 2
      font-size 23px
      overflow hidden
      text-overflow ellipsis
      line-height 1.2
    .article-footer
      margin-top 15px
    .article-tag
      font-size 12px
      padding 0 3px
      border 1px solid #60a3f5
      color #60a3f5
    .article-user
      margin-left 10px
      .user-img
        width 20px
        height 20px
        border-radius 50%
        display inline-block
        vertical-align middle
        margin-right 5px
      p
        display inline-block
        color #777
    .article-time
      color #777
  .deleteBtn
    font-size 13px
    color transparent
    position absolute
    right 0
    bottom 0
    width 20px
    height 20px
    line-height 20px
    padding-left 10px
    overflow hidden
    transition width .3s
    .deleteBtn-icon
      color #777
      position absolute
      right 0
      width 20px
      font-size 14px
      text-align center
    &:hover
      width 70px
      color #fff
      background #ed4040
      .deleteBtn-icon
        color #fff