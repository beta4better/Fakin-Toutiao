@import "../../statics/style/common.styl"
.nav
  width 110px
  margin-right 20px
  height 600px
  position relative
  .nav-fixed
   position fixed
   width 110px
   top 10px
  .logo
    img
     width 100%
  ul
    margin-top 15px
    li
      .nav-list
        display block
        width 100%
        height 40px
        line-height 40px
        text-align center
        font-size 15px
        border-radius 5px
        margin-bottom 5px
        &:hover
          background-color #ed4040
          color #fff
        &.active
         nav-active()
    .channel-more
      position relative
      .channel-more-layer
        display none
        position absolute
        bottom 0
        left 110px
        width 230px
        background #fff
        z-index 999
        border-radius 5px
        box-shadow 0 0 4px 1px rgba(0,0,0,.5)
        ul
          margin 0
          padding 10px
          box-sizing border-box
          li
            display inline-block
            width 50%
      &:hover
        .channel-more-layer
          display block