@import "../../statics/style/common.styl"
.recommend-box
  margin-top 20px
  width 100%;
  padding 20px;
  box-sizing border-box
  border-top: 2px solid #ed4040;
  background-color: #f4f5f6;

  .recommend-title
    font-weight bold
    font-size 18px
    color #ed4040;
    line-height 1.2
  .recommend-list
    width 100%
    line-height 20px
    no-wrap()
    padding 10px 0
    a
      font-size 14px